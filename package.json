{
  "name": "daycare2",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "dev": "yarn workspace daycare-server run dev",
    "web": "yarn workspace daycare-web dev",
    "infra:up": "docker compose up -d db redis s3",
    "infra:down": "docker compose down",
    "infra:logs": "docker compose logs -f db redis s3",
    "test": "yarn workspaces run test",
    "test:coverage": "yarn workspace daycare-server run test:coverage",
    "test:watch": "yarn workspaces run test:watch",
    "typecheck": "yarn workspaces run typecheck"
  }
}
