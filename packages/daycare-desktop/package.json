{
  "name": "daycare-desktop",
  "version": "0.0.1",
  "description": "Daycare desktop app shell powered by Electron",
  "private": true,
  "main": "sources/main.cjs",
  "scripts": {
    "build": "electron-builder --dir",
    "dev": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac dmg zip",
    "dist:win": "electron-builder --win nsis",
    "dist:linux": "electron-builder --linux AppImage",
    "start": "electron .",
    "test": "echo \"daycare-desktop: no tests yet\"",
    "typecheck": "echo \"daycare-desktop: no typecheck yet\""
  },
  "devDependencies": {
    "electron": "36.9.5",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "org.korshakov.daycare.desktop",
    "productName": "Daycare",
    "electronVersion": "36.9.5",
    "files": [
      "sources/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
