{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "sources",
    "baseUrl": ".",
    "paths": {
      "@/types": ["./sources/types.ts"]
    },
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["sources/**/*.ts"]
}
